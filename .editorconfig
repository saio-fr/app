# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

# 2 space indentation
[*.js, *.scss, *.css, *.json]
indent_style = space
indent_size = 2
